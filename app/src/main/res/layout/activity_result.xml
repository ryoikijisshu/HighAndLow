<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="このカードは..."
            android:id="@+id/text"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="102dp" android:layout_marginStart="102dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="102dp"
            android:layout_marginRight="102dp" android:layout_marginTop="53dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/uracard"/>
    <ImageView
            android:layout_width="232dp"
            android:layout_height="331dp" app:srcCompat="@drawable/ura"
            android:id="@+id/uracard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="89dp" android:layout_marginStart="89dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="89dp" android:layout_marginRight="89dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/onemore" android:layout_marginBottom="64dp"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/text"/>
    <Button
            android:text="もう1度遊ぶ"
            android:layout_width="233dp"
            android:layout_height="74dp"
            android:id="@+id/onemore" android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="68dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="102dp" android:layout_marginStart="102dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="102dp"
            android:layout_marginRight="102dp"
            android:onClick="onOnemoreButtonTapped"/>
</android.support.constraint.ConstraintLayout>