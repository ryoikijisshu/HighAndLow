<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="７未満"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/button1" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.037" app:layout_constraintVertical_bias="0.97"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textSize="30sp"/>
    <Button
            android:text="7以上"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:id="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button1" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/button1" android:textSize="30sp"/>
    <ImageView
            android:layout_width="230dp"
            android:layout_height="380dp" app:srcCompat="@drawable/back"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView2" app:layout_constraintHorizontal_bias="0.495" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.197"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="このカードは…"
            android:layout_width="232dp"
            android:layout_height="43dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.054" android:textSize="30sp" android:gravity="center"/>

</android.support.constraint.ConstraintLayout>